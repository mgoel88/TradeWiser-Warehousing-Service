# TradeWiser Webhook System Configuration
# Copy these variables to your .env file for webhook integration

# Webhook Security
WEBHOOK_API_KEYS=warehouse-key-123,quality-key-456,iot-sensor-key-789
WEBHOOK_SECRET=tradewiser-webhook-secret-2024

# External Module URLs
WAREHOUSE_MODULE_URL=http://localhost:3001
QUALITY_MODULE_URL=http://localhost:3002
IOT_GATEWAY_URL=http://localhost:3003

# External Module API Keys
WAREHOUSE_MODULE_API_KEY=warehouse-api-key-secure-token
QUALITY_MODULE_API_KEY=quality-api-key-secure-token
IOT_GATEWAY_API_KEY=iot-gateway-api-key-secure-token

# Rate Limiting (requests per minute)
WEBHOOK_RATE_LIMIT=100

# IP Whitelist for trusted sources (comma-separated)
WEBHOOK_IP_WHITELIST=127.0.0.1,::1,10.0.0.0/8,192.168.0.0/16

# Retry Configuration
OUTBOUND_API_RETRY_ATTEMPTS=3
OUTBOUND_API_TIMEOUT_MS=5000

# Webhook Logging
WEBHOOK_LOG_LEVEL=info
WEBHOOK_LOG_FILE=logs/webhooks.log

# Real-time Features
WEBSOCKET_ENABLED=true
WEBSOCKET_PING_INTERVAL=30000
WEBSOCKET_MAX_CONNECTIONS=1000