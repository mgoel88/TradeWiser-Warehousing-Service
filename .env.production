# Production Environment Configuration for TradeWiser Platform
# IMPORTANT: Change all default passwords and secrets before production deployment

# Database Configuration - Production
DATABASE_URL=postgresql://tradewiser_prod:CHANGE_THIS_PASSWORD@database:5432/tradewiser_production
PGHOST=database
PGDATABASE=tradewiser_production
PGUSER=tradewiser_prod
PGPASSWORD=CHANGE_THIS_PASSWORD
PGPORT=5432

# Session Security - CRITICAL: Change this secret
SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARACTERS_LONG

# Application Configuration
NODE_ENV=production
PORT=5000
DEBUG=false
LOG_LEVEL=error

# Security Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
TRUST_PROXY=true

# SSL/TLS Configuration (if using HTTPS)
SSL_ENABLED=true
SSL_KEY_PATH=/certs/private.key
SSL_CERT_PATH=/certs/certificate.crt

# External Services - Configure as needed
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads
UPLOAD_MAX_FILES=10

# Monitoring and Logging
SENTRY_DSN=https://your-sentry-dsn-here
LOG_FILE=/app/logs/production.log
ENABLE_REQUEST_LOGGING=true

# Blockchain Configuration (if using external services)
# BLOCKCHAIN_RPC_URL=https://your-blockchain-rpc-url
# BLOCKCHAIN_PRIVATE_KEY=your_private_key_here

# External API Keys (configure as needed)
# STRIPE_SECRET_KEY=sk_live_your_live_stripe_key
# VITE_STRIPE_PUBLIC_KEY=pk_live_your_live_stripe_public_key
# PRICING_API_KEY=your_pricing_api_key
# NOTIFICATION_SERVICE_KEY=your_notification_key

# Database Backup Configuration
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE=0 2 * * *
DB_BACKUP_RETENTION_DAYS=30

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Performance Configuration
CLUSTER_ENABLED=true
CLUSTER_WORKERS=auto
CACHE_TTL=3600